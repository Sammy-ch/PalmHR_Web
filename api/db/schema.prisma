datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  }

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
  previewFeatures = ["driverAdapters"]
}

model Admin {
id Int @id @default(autoincrement())
email String @unique
hashedPassword String
salt String
resetToken String?
resetTokenExpiresAt DateTime?
tierAccess AdminRole[]
}

model AdminRole{
id String @id @default(uuid())
createdAt DateTime @default(now())
updatedAt DateTime @default(now())
name String
admin Admin? @relation(fields: [adminId],references: [id])
adminId  Int?


@@unique([name,adminId])
}

model Employee_profile {
ProfileId String @id
First_Name String
Last_Name String
ProfileImage String?
Position String
email String?
OffDays Int?
AttendanceData Employee_attendance[]

}

model Employee_attendance {
AttendanceId  String @id @default(uuid())
Employee   Employee_profile  @relation(fields: [EmployeeId],references: [ProfileId])
EmployeeId String
Checkin_time  DateTime?
Checkout_time DateTime?
Checking_Date DateTime?
Working_time Int?
ArrivalTag String?

}

